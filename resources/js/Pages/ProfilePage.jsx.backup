import React, { useState, useEffect } from 'react';
import { User, Mail, Phone, MapPin, Edit2, Calendar, Package, Clock, CheckCircle, XCircle, CreditCard, Filter, Search } from 'lucide-react';
import Navbar from '../Components/Navbar';
import Footer from '../Components/Footer';

export default function ProfilePage(props) {
  const auth = props.auth || {};
  const user = auth.user || {};

  // State management
  const [activeTab, setActiveTab] = useState('semua-pesanan');
  const [isEditingProfile, setIsEditingProfile] = useState(false);
  const [pemesananData, setPemesananData] = useState([]);
  const [filteredData, setFilteredData] = useState([]);
  const [loading, setLoading] = useState(false);
  const [searchTerm, setSearchTerm] = useState('');
  const [statusFilter, setStatusFilter] = useState('all');

  // Profile form state
  const [profileForm, setProfileForm] = useState({
    nama: user.nama || 'Avita',
    email: user.email || 'avita@gmail.com',
    no_telepon: user.no_telepon || '081234567890',
    alamat: 'Gg. Solihun, Otista Raya, Jakarta Timur'
  });

  // Dummy data pemesanan untuk demo
  useEffect(() => {
    const dummyPemesanan = [
      {
        id_pemesanan: 1,
        tgl_pesan: '2025-01-15',
        layanan: { nama_layanan: 'Angkut Barang' },
        armada: { jenis_kendaraan: 'Toyota Avanza 2023', no_plat: 'B 1234 ABC' },
        lokasi_jemput: 'Jakarta Selatan',
        lokasi_tujuan: 'Bogor',
        total_biaya: 150000,
        status_pemesanan: 'Menunggu Verifikasi',
        pembayaran: { status_pembayaran: 'Belum Bayar' }
      },
      {
        id_pemesanan: 2,
        tgl_pesan: '2025-01-10',
        layanan: { nama_layanan: 'Sewa Kendaraan' },
        armada: { jenis_kendaraan: 'Toyota Avanza 2023', no_plat: 'B 5678 DEF' },
        lokasi_jemput: 'Jakarta Pusat',
        lokasi_tujuan: 'Bandung',
        total_biaya: 300000,
        status_pemesanan: 'Pesanan Selesai',
        pembayaran: { status_pembayaran: 'Sudah Bayar' }
      },
      {
        id_pemesanan: 3,
        tgl_pesan: '2025-01-08',
        layanan: { nama_layanan: 'Angkut Sampah' },
        armada: { jenis_kendaraan: 'Toyota Avanza 2023', no_plat: 'B 9012 GHI' },
        lokasi_jemput: 'Jakarta Timur',
        lokasi_tujuan: 'Depok',
        total_biaya: 200000,
        status_pemesanan: 'Pesanan Diproses',
        pembayaran: { status_pembayaran: 'Sudah Bayar' }
      },
      {
        id_pemesanan: 4,
        tgl_pesan: '2025-01-05',
        layanan: { nama_layanan: 'Sewa Kendaraan' },
        armada: { jenis_kendaraan: 'Toyota Avanza 2023', no_plat: 'B 3456 JKL' },
        lokasi_jemput: 'Jakarta Barat',
        lokasi_tujuan: 'Tangerang',
        total_biaya: 120000,
        status_pemesanan: 'Pesanan Selesai',
        pembayaran: { status_pembayaran: 'Sudah Bayar' }
      }
    ];
    setPemesananData(dummyPemesanan);
    setFilteredData(dummyPemesanan);
  }, []);

  // Filter pemesanan berdasarkan tab dan search
  useEffect(() => {
    let filtered = pemesananData;

    // Filter by status
    if (statusFilter === 'belum-bayar') {
      filtered = filtered.filter(item => item.pembayaran?.status_pembayaran === 'Belum Bayar');
    } else if (statusFilter === 'selesai') {
      filtered = filtered.filter(item => item.status_pemesanan === 'Pesanan Selesai');
    }

    // Filter by search term
    if (searchTerm) {
      filtered = filtered.filter(item => 
        item.layanan?.nama_layanan.toLowerCase().includes(searchTerm.toLowerCase()) ||
        item.armada?.jenis_kendaraan.toLowerCase().includes(searchTerm.toLowerCase()) ||
        item.lokasi_jemput.toLowerCase().includes(searchTerm.toLowerCase()) ||
        item.lokasi_tujuan.toLowerCase().includes(searchTerm.toLowerCase())
      );
    }

    setFilteredData(filtered);
  }, [pemesananData, statusFilter, searchTerm]);

  const handleTabChange = (tab) => {
    setActiveTab(tab);
    if (tab === 'semua-pesanan') setStatusFilter('all');
    else if (tab === 'belum-bayar') setStatusFilter('belum-bayar');
    else if (tab === 'selesai') setStatusFilter('selesai');
  };

  const handleProfileUpdate = () => {
    // Simulate API call to update profile
    setLoading(true);
    setTimeout(() => {
      setIsEditingProfile(false);
      setLoading(false);
      alert('Profil berhasil diperbarui!');
    }, 1000);
  };

  const getStatusBadge = (status) => {
    const statusStyles = {
      'Menunggu Verifikasi': 'bg-yellow-100 text-yellow-800',
      'Pesanan Diproses': 'bg-blue-100 text-blue-800',
      'Pesanan Selesai': 'bg-green-100 text-green-800',
      'Dibatalkan': 'bg-red-100 text-red-800'
    };
    
    return statusStyles[status] || 'bg-gray-100 text-gray-800';
  };

  const getPaymentStatusBadge = (status) => {
    return status === 'Sudah Bayar' 
      ? 'bg-green-100 text-green-800' 
      : 'bg-orange-100 text-orange-800';
  };

  const formatCurrency = (amount) => {
    return new Intl.NumberFormat('id-ID', {
      style: 'currency',
      currency: 'IDR'
    }).format(amount);
  };

  const formatDate = (dateString) => {
    return new Date(dateString).toLocaleDateString('id-ID', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });
  };

  return (
    <div className="font-sans antialiased text-gray-800 bg-[#f0f9ff] min-h-screen flex flex-col">
      <Navbar auth={auth} />

      {/* Main Content */}
      <section className="flex-1 pt-24 py-8">
        <div className="container mx-auto px-4">
          <div className="max-w-6xl mx-auto">
            
            {/* Profile Card */}
            <div className="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden mb-8">
              
              {/* Profile Header */}
              <div className="bg-gradient-to-r from-[#e6f3ff] to-[#f0f8ff] p-8 relative border-b border-blue-100">
                <div className="flex flex-col md:flex-row items-center gap-6">
                  {/* Avatar */}
                  <div className="w-24 h-24 bg-white rounded-full flex items-center justify-center border-2 border-[#00a3e0]/20 shadow-sm">
                    <User size={48} className="text-[#00a3e0]" />
                  </div>
                  
                  {/* Profile Info */}
                  <div className="text-center md:text-left flex-1">
                    <h2 className="text-2xl font-bold mb-2 text-[#003366]">{profileForm.nama}</h2>
                    <div className="flex flex-col md:flex-row gap-4 text-gray-600">
                      <div className="flex items-center gap-2">
                        <Mail size={16} className="text-[#00a3e0]" />
                        <span>{profileForm.email}</span>
                      </div>
                      <div className="flex items-center gap-2">
                        <Phone size={16} className="text-[#00a3e0]" />
                        <span>{profileForm.no_telepon}</span>
                      </div>
                    </div>
                  </div>

                  {/* Edit Button */}
                  <button
                    onClick={() => setIsEditingProfile(!isEditingProfile)}
                    className="bg-[#00a3e0] hover:bg-[#0088b8] text-white px-6 py-3 rounded-lg transition-all flex items-center gap-2 shadow-sm"
                  >
                    <Edit2 size={16} />
                    {isEditingProfile ? 'Batal' : 'Edit Profil'}
                  </button>
                </div>
              </div>

              {/* Profile Content */}
              {isEditingProfile && (
                <div className="p-8">
                  <div className="max-w-2xl">
                    <div className="space-y-6">
                      <h3 className="text-xl font-bold text-[#003366] mb-6">Edit Profil</h3>
                      
                      <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                          <label className="block text-sm font-medium text-gray-700 mb-2">Nama Lengkap</label>
                          <input
                            type="text"
                            value={profileForm.nama}
                            onChange={(e) => setProfileForm({...profileForm, nama: e.target.value})}
                            className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a3e0] focus:border-transparent"
                          />
                        </div>
                        
                        <div>
                          <label className="block text-sm font-medium text-gray-700 mb-2">No. Telepon</label>
                          <input
                            type="tel"
                            value={profileForm.no_telepon}
                            onChange={(e) => setProfileForm({...profileForm, no_telepon: e.target.value})}
                            className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a3e0] focus:border-transparent"
                          />
                        </div>
                      </div>

                      <div>
                        <label className="block text-sm font-medium text-gray-700 mb-2">Email</label>
                        <input
                          type="email"
                          value={profileForm.email}
                          onChange={(e) => setProfileForm({...profileForm, email: e.target.value})}
                          className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a3e0] focus:border-transparent"
                        />
                      </div>

                      <div>
                        <label className="block text-sm font-medium text-gray-700 mb-2">Alamat</label>
                        <textarea
                          value={profileForm.alamat}
                          onChange={(e) => setProfileForm({...profileForm, alamat: e.target.value})}
                          rows={3}
                          className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a3e0] focus:border-transparent"
                          placeholder="Masukkan alamat lengkap..."
                        />
                      </div>

                      <div className="flex gap-4 pt-4">
                        <button
                          onClick={handleProfileUpdate}
                          disabled={loading}
                          className="bg-[#00a3e0] hover:bg-[#0088b8] text-white px-8 py-3 rounded-lg font-medium transition-colors disabled:opacity-50"
                        >
                          {loading ? 'Menyimpan...' : 'Simpan Perubahan'}
                        </button>
                        <button
                          onClick={() => setIsEditingProfile(false)}
                          className="bg-gray-200 hover:bg-gray-300 text-gray-700 px-8 py-3 rounded-lg font-medium transition-colors"
                        >
                          Batal
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              )}
            </div>

            {/* History Pemesanan Section */}
            <div className="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
              
              {/* Tab Navigation */}
              <div className="border-b border-gray-100 p-6 pb-0">
                <h3 className="text-xl font-bold text-[#003366] mb-4">Daftar Pemesanan</h3>
                <div className="flex flex-wrap">
                  {[
                    { id: 'semua-pesanan', label: 'Semua Pesanan', count: pemesananData.length },
                    { id: 'belum-bayar', label: 'Belum Bayar', count: pemesananData.filter(p => p.pembayaran?.status_pembayaran === 'Belum Bayar').length },
                    { id: 'selesai', label: 'Selesai', count: pemesananData.filter(p => p.status_pemesanan === 'Pesanan Selesai').length }
                  ].map((tab) => (
                    <button
                      key={tab.id}
                      onClick={() => handleTabChange(tab.id)}
                      className={`px-6 py-4 font-medium text-sm transition-colors relative flex items-center gap-2 ${
                        activeTab === tab.id
                          ? 'text-[#00a3e0] border-b-2 border-[#00a3e0] bg-blue-50/50'
                          : 'text-gray-600 hover:text-[#00a3e0] hover:bg-blue-50/30'
                      }`}
                    >
                      {tab.label}
                      <span className={`px-2 py-1 rounded-full text-xs font-medium ${
                        activeTab === tab.id 
                          ? 'bg-[#00a3e0]/10 text-[#00a3e0] border border-[#00a3e0]/20' 
                          : 'bg-gray-100 text-gray-500'
                      }`}>
                        {tab.count}
                      </span>
                    </button>
                  ))}
                </div>
              </div>

              {/* Orders Content */}
              <div className="p-6">
                {/* Search and Filter */}
                <div className="flex flex-col md:flex-row gap-4 mb-6">
                  <div className="flex-1 relative">
                    <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400" size={20} />
                    <input
                      type="text"
                      placeholder="Cari berdasarkan layanan, kendaraan, atau lokasi..."
                      value={searchTerm}
                      onChange={(e) => setSearchTerm(e.target.value)}
                      className="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a3e0] focus:border-transparent"
                    />
                  </div>
                </div>

                {/* Orders List */}
                <div className="space-y-4">
                  {filteredData.length === 0 ? (
                    <div className="text-center py-12">
                      <Package className="mx-auto text-gray-300 mb-4" size={64} />
                      <h3 className="text-lg font-medium text-gray-600 mb-2">Tidak ada pemesanan</h3>
                      <p className="text-gray-500">
                        {searchTerm ? 'Tidak ditemukan hasil untuk pencarian tersebut' : 
                         statusFilter === 'belum-bayar' ? 'Belum ada pemesanan yang belum dibayar' :
                         statusFilter === 'selesai' ? 'Belum ada pemesanan yang selesai' :
                         'Anda belum memiliki riwayat pemesanan'}
                      </p>
                    </div>
                  ) : (
                    filteredData.map((order) => (
                      <div key={order.id_pemesanan} className="border border-gray-100 rounded-xl p-6 hover:shadow-sm hover:border-blue-200 transition-all bg-white/80">
                        <div className="flex flex-col lg:flex-row lg:items-center justify-between gap-4">
                          
                          {/* Left: Order Details */}
                          <div className="flex-1">
                            <div className="flex flex-wrap items-center gap-3 mb-3">
                              <h4 className="font-bold text-lg text-[#003366]">
                                {order.layanan?.nama_layanan}
                              </h4>
                              <span className={`px-3 py-1 rounded-full text-xs font-medium ${getStatusBadge(order.status_pemesanan)}`}>
                                {order.status_pemesanan}
                              </span>
                              <span className={`px-3 py-1 rounded-full text-xs font-medium ${getPaymentStatusBadge(order.pembayaran?.status_pembayaran)}`}>
                                {order.pembayaran?.status_pembayaran}
                              </span>
                            </div>
                            
                            <div className="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
                              <div className="flex items-center gap-2">
                                <Calendar size={16} />
                                <span>{formatDate(order.tgl_pesan)}</span>
                              </div>
                              <div className="flex items-center gap-2">
                                <Package size={16} />
                                <span>{order.armada?.jenis_kendaraan}</span>
                              </div>
                              <div className="flex items-center gap-2">
                                <MapPin size={16} />
                                <span>{order.lokasi_jemput} → {order.lokasi_tujuan}</span>
                              </div>
                              <div className="flex items-center gap-2">
                                <CreditCard size={16} />
                                <span className="font-medium text-[#00a3e0]">{formatCurrency(order.total_biaya)}</span>
                              </div>
                            </div>
                          </div>

                          {/* Right: Actions */}
                          <div className="flex flex-col sm:flex-row gap-2">
                            {order.pembayaran?.status_pembayaran === 'Belum Bayar' && (
                              <button className="bg-orange-400 hover:bg-orange-500 text-white px-6 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm">
                                Bayar Sekarang
                              </button>
                            )}
                            {order.status_pemesanan === 'Pesanan Selesai' && (
                              <button className="bg-[#00a3e0] hover:bg-[#0088b8] text-white px-6 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm">
                                Beri Ulasan
                              </button>
                            )}
                            <button className="border border-gray-200 hover:border-[#00a3e0] hover:bg-blue-50/30 text-gray-600 hover:text-[#00a3e0] px-6 py-2 rounded-lg text-sm font-medium transition-colors">
                              Detail
                            </button>
                          </div>
                        </div>
                      </div>
                    ))
                  )}
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
                  <div>
                    {/* Search and Filter */}
                    <div className="flex flex-col md:flex-row gap-4 mb-6">
                      <div className="flex-1 relative">
                        <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400" size={20} />
                        <input
                          type="text"
                          placeholder="Cari berdasarkan layanan, kendaraan, atau lokasi..."
                          value={searchTerm}
                          onChange={(e) => setSearchTerm(e.target.value)}
                          className="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#00a3e0] focus:border-transparent"
                        />
                      </div>
                    </div>

                    {/* Orders List */}
                    <div className="space-y-4">
                      {filteredData.length === 0 ? (
                        <div className="text-center py-12">
                          <Package className="mx-auto text-gray-300 mb-4" size={64} />
                          <h3 className="text-lg font-medium text-gray-600 mb-2">Tidak ada pemesanan</h3>
                          <p className="text-gray-500">
                            {searchTerm ? 'Tidak ditemukan hasil untuk pencarian tersebut' : 
                             statusFilter === 'belum-bayar' ? 'Belum ada pemesanan yang belum dibayar' :
                             statusFilter === 'selesai' ? 'Belum ada pemesanan yang selesai' :
                             'Anda belum memiliki riwayat pemesanan'}
                          </p>
                        </div>
                      ) : (
                        filteredData.map((order) => (
                          <div key={order.id_pemesanan} className="border border-gray-100 rounded-xl p-6 hover:shadow-sm hover:border-blue-200 transition-all bg-white/80">
                            <div className="flex flex-col lg:flex-row lg:items-center justify-between gap-4">
                              
                              {/* Left: Order Details */}
                              <div className="flex-1">
                                <div className="flex flex-wrap items-center gap-3 mb-3">
                                  <h4 className="font-bold text-lg text-[#003366]">
                                    {order.layanan?.nama_layanan}
                                  </h4>
                                  <span className={`px-3 py-1 rounded-full text-xs font-medium ${getStatusBadge(order.status_pemesanan)}`}>
                                    {order.status_pemesanan}
                                  </span>
                                  <span className={`px-3 py-1 rounded-full text-xs font-medium ${getPaymentStatusBadge(order.pembayaran?.status_pembayaran)}`}>
                                    {order.pembayaran?.status_pembayaran}
                                  </span>
                                </div>
                                
                                <div className="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
                                  <div className="flex items-center gap-2">
                                    <Calendar size={16} />
                                    <span>{formatDate(order.tgl_pesan)}</span>
                                  </div>
                                  <div className="flex items-center gap-2">
                                    <Package size={16} />
                                    <span>{order.armada?.jenis_kendaraan}</span>
                                  </div>
                                  <div className="flex items-center gap-2">
                                    <MapPin size={16} />
                                    <span>{order.lokasi_jemput} → {order.lokasi_tujuan}</span>
                                  </div>
                                  <div className="flex items-center gap-2">
                                    <CreditCard size={16} />
                                    <span className="font-medium text-[#00a3e0]">{formatCurrency(order.total_biaya)}</span>
                          </div>

                          {/* Right: Actions */}
                          <div className="flex flex-col sm:flex-row gap-2">
                            {order.pembayaran?.status_pembayaran === 'Belum Bayar' && (
                              <button className="bg-orange-400 hover:bg-orange-500 text-white px-6 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm">
                                Bayar Sekarang
                              </button>
                            )}
                            {order.status_pemesanan === 'Pesanan Selesai' && (
                              <button className="bg-[#00a3e0] hover:bg-[#0088b8] text-white px-6 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm">
                                Beri Ulasan
                              </button>
                            )}
                            <button className="border border-gray-200 hover:border-[#00a3e0] hover:bg-blue-50/30 text-gray-600 hover:text-[#00a3e0] px-6 py-2 rounded-lg text-sm font-medium transition-colors">
                              Detail
                            </button>
                          </div>
                        </div>
                      </div>
                    ))
                  )}
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <Footer />
    </div>
  );
}